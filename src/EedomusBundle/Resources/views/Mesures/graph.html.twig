{% extends "Thibautg16SqueletteBundle::layout.html.twig" %}
 
{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block fil_ariane %} 
	{{ parent() }} 
    <li><a href="{{ path('ssi_ssi_homepage') }}">Accueil</a></li>
    <li>eedomus</li>
    <li class="active"><a href="{{ path('eedomus_mesures_graph') }}"> Graph </a></li>
{% endblock %}

{% block body_ssi %}       
    <!-- Chemin vers la page AJAX -->
    <input type="hidden" id="chemin" value="{{ path('eedomus_mesures_ajaxgraph') }}" />
                
    <div id="content-wrapper"
        <fieldset>       
		  <legend><h3>Graph</h3></legend>        
    		<br/>
            <div>
                <div class="col-md-12" style="text-align:center">
                    <select size="1" id="lst_periph" onchange="EedomusGraph()">
                        {% for periph in lst_periph %}
                            <option value="{{periph.id}}" {% if periph.id == idperiph %} selected="selected" {% endif %}>{{periph.name}}</option>
                        {% endfor %}
                    </select>
                    <select size="1" id="lst_periode" onchange="EedomusGraph()">
                        <option value="Heure" {% if periode == 'Heure' %} selected="selected" {% endif %} >Heure</option>
                        <option value="Jour" {% if periode == 'Jour' %} selected="selected" {% endif %} >Jour</option>
                        <option value="Semaine" {% if periode == 'Semaine' %} selected="selected" {% endif %} >Semaine</option>
                        <option value="Mois" {% if periode == 'Mois' %} selected="selected" {% endif %} >Mois</option>
                        <option value="Annee" {% if periode == 'Annee' %} selected="selected" {% endif %} >Ann√©e</option>
                    </select>
            	</div>
                <br/>
        	    <div id="zone">
                    <div id="chart" class="col-md-12" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
                    
                    <script type="text/javascript">
                        {{ chart(ob) }}
                    </script>
                </div>
            </div>
        </fieldset>
    </div>
    


{% endblock %}
