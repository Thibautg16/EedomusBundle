{% extends "Thibautg16SqueletteBundle::layout.html.twig" %}
 
{% block title %}
  {{ parent() }} - Eedomus
{% endblock %}

{% block fil_ariane %} 
	{#{ parent() }#} 
    <li><a href="">Accueil</a></li>
    <li>Eedomus</li>
    <li class="active"><a href="{{ path('eedomus_compteurs_liste', {'type':'EDF'}) }}">Liste</a></li>
{% endblock %}

{% block body_ssi %}

			<div class="col-sm-12">
                    <fieldset>       
		  <legend><h3>Mesures Eedomus</h3></legend>
    	    <input id="filter" class="form-control" type="text" placeholder="Recherche">
    	    <br/>
<table class="table footable" data-page-size="15" data-filter="#filter">
        <thead>
        <tr>
            <th data-toggle="true" data-type="numeric">#</th>
            <th data-type="numeric">Date</th>
            <th data-hide="phone,tablet">Type Valeur</th>
            <th data-hide="phone,tablet">Valeur</th>
        </tr>
    </thead>
        <tbody>
    {% for ligne in liste %}
         
	<tr>
        <td> {{ ligne.id }} </td>
        <td> {{ ligne.date|date("d/m/Y H:i:s") }} </td>
        <td> {{ ligne.type }} </td>
        <td> {{ ligne.valeur }} </td>
        {% endfor %}
    </tbody>

        <tfoot class="hide-if-no-paging">
                <tr>
                        <td colspan="9">
                                <div class="pagination pagination-centered"></div>
                        </td>
                </tr>
        </tfoot>
</table>
</fieldset>
{% endblock %}
